<div class="card mx-auto mt-5" style="max-width: 600px;">
    <div class="card-body">
        <h3 class="card-title mb-4">✏️ Edit Blog</h3>

        <form action="/blog/<%= editBlog._id %>/edit?_method=PUT" method="post" class="row g-3">

            <!-- Task Text Input -->
            <div class="col-12">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="blog[title]" id="title" class="form-control" required
                    value="<%= editBlog.title %>">
            </div>

            <div class="col-12">
                <label for="content" class="form-label">Content</label>
                <input type="text" name="blog[content]" id="content" class="form-control" required
                    value="<%= editBlog.content %>">
            </div>


            <!-- Buttons -->
            <div class="col-12 d-flex justify-content-between">
                <a href="/blog" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>

        </form>
    </div>
</div>